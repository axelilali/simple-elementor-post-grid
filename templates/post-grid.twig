<div id="ilali-post-widget">
  <div class="row">

    {% for post in posts %}
      <div class=" column col-lg-{{ settings.columns }} ">

        {% if settings.show_thumbnail == 'yes' %}
          <img class="post-thumbnail" src="{{ post.thumbnail }}" alt="" srcset="" />
        {% endif %}

        {% if settings.show_title == 'yes' %}
          <a href="{{ post.link }}">
            <h3 class="post-title">
              {{ post.title }}
            </h3>
          </a>
        {% endif %}

        {% if settings.show_date == 'yes' %}
          <p class="post-date">
            {{ post.date }}
          </p>
        {% endif %}

        {% if settings.show_excerpt == 'yes' %}
          <p class="post-content">
            {{ post.content | raw }}
          </p>
        {% endif %}

      </div>
    {% endfor %}
  </div>

  {% if settings.show_pagination == 'yes' and max_pages > settings.posts_per_page %}
    <div class="pagination-btn-container">
      <button class="pagination-btn" data-max-pages="{{ max_pages }}" data-thumbnail="{{ settings.show_thumbnail }}" data-title="{{ settings.show_title }}" data-data="{{ settings.show_date }}" data-excerpt="{{ settings.show_excerpt }}" data-columns="{{ settings.columns }}" data-site-url="{{ site_url }}" data-post-type="{{ settings.post_type }}" data-post-order="{{ settings.posts_order }}" data-posts-per-page="{{ settings.posts_per_page }}" data-excerpt-length="{{ settings.excerpt_length }}">
        click me    
                              
                      
              
      </button>
    </div>
  {% endif %}

</div>
