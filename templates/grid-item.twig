{% for post in posts %}
	<div class="column col-lg-{{ columns }}">

		{% if show_thumbnail == '1' %}
			<img class="post-thumbnail" src="{{ post.thumbnail }}" alt="thumbnail"/>
		{% endif %}

		{% if show_title == '1' %}
			<a href="{{ post.link }}">
				<h3 class="post-title">
					{{ post.title }}
				</h3>
			</a>
		{% endif %}

		{% if show_date == '1' %}
			<p class="post-date">
				{{ post.date }}
			</p>
		{% endif %}

		{% if show_excerpt == '1' %}
			<p class="post-content">
				{{ post.content | raw }}
			</p>
		{% endif %}

	</div>

{% endfor %}